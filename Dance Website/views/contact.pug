extends base.pug

block scripts
    script(src="/static/script.js")

block style 
    style
        include ../static/style.css
        include ../static/contact.css

block nav 
  nav#navbar 
        ul 
          div#logo
            img(src="/static/img/logo2.jpeg")
            | SDA
          li #[a(href='/') Home]
          li #[a(href='/') Services]
          li #[a(href='/') Class Schedule]
          li #[a(href='/#missionsection') About Us]
          li #[a(href='/contact' class='active') Contact Us]
        div.sign
          button.signbtn
            | SIGN IN
          button.signbtn
            | SIGN UP FOR FREE

block content
    div.container
        if(success != '')
            div.alert.alert-success
                strong #{success}
        if(error)
            div.alert.alert-danger 
                strong #{error}
        h1 Fill the Form below to Contact Us!
        form(action="/contact", method="post", class='form-box')
            input(type="text", name="name", id="name", placeholder="Enter your name")
            input(type="phone", name="phone", id="phone", placeholder="Enter your contact number")
            input(type="email", name="email", id="email", placeholder="Enter your email id")
            input(type="text", name="address", id="address", placeholder="Enter your address")
            input(type="text", name="desc", id="desc", placeholder="Mention your concern")
            button(class="btn")
                | Submit